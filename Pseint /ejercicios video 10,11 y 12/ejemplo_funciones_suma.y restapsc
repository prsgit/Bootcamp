Funcion resultado <- suma ( sumando1 , sumando2 )
	definir resultado Como Entero;
	resultado = sumando1 + sumando2;
	
Fin Funcion


Funcion resultado <- restar (restando1 , restando2)
	definir resultado Como Entero;
	resultado = restando1 - restando2;
FinFuncion



Algoritmo ejemplo_funciones_suma_y_resta
	Definir resultado_suma , resultado_resta Como Entero;
	
	Escribir suma(5 , 20);
	Escribir restar(8 , 2);
	Escribir "";
	
	
	// Froma desglosada
	
	resultado_suma = suma(15,16);
	resultado_resta = restar(resultado_suma,1);
	Escribir resultado_resta;
	
	Escribir "";
	
	
	// Forma directa
	
	Escribir restar(suma(15,16),1);
	
	
	
	
	
	
FinAlgoritmo
